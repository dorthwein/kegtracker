$(document).on('pageshow', '#_public_home', function(event){	
	// prepare the data
	$.mobile.loading('show');
	theme = settings.theme;

	$('#public_slide_frame').jqxScrollView({ slideShow: true, width: '100%', height: 350, buttonsOffset: [0, 10], theme: theme });

	// Grid data source


	$.mobile.loading('hide');		

});
