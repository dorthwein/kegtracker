$(document).on('pageshow', '#_accounting_invoices', function(event){	
	$.mobile.loading('show');
	var theme = settings.theme
	
	
	url = system.server + $('.ui-page-active').attr('data-url') + '.json'	
	var source = {
		datatype: "json",
		datafields: [
			{ name: 'bill_to_entity_description', type: 'string'},
			{ name: 'invoice_number', type: 'string'},
			{ name: 'date', type: 'date'},
			{ name: 'total_value', type: 'number'},
			{ name: '_id'},
		], 
		url: url,
		updaterow: function (rowid, rowdata, commit) {
			// synchronize with the server - send update command
			// call commit with parameter true if the synchronization with the server is successful 
			// and with parameter false if the synchronization failder.		
			commit(true);
		}
		
	};

	window.dataAdapter = new $.jqx.dataAdapter(source, {
		beforeSend: function(jqXHR, settings){
			$.mobile.loading('show');	
		},
		loadComplete: function (data) { 
			$.mobile.loading('hide');
		},
		loadError: function (xhr, status, error) { }      
	});
//	window.dataAdapter = dataAdapter

	// Initialize Grid
	var gridSettings = settings.jqxGridProperties
	gridSettings['source'] = dataAdapter;
	gridSettings['columns'] = [
		{ text: 'Bill To', datafield: 'bill_to_entity_description', filtertype: 'checkedlist' },
		{ text: 'Invoice #', datafield: 'invoice_number'},
		{ text: 'Date', datafield: 'date', cellsformat: 'd', filtertype: 'date' },
		{ text: 'View', datafield: '_id', columntype: 'button', filterable:false, width:'75px', cellsrenderer: function (row) {
			return 'View'
		}, buttonclick: function (row) {
			var rowdata = $('.jqxGrid').jqxGrid('getrowdata', row);
			var url = $('.ui-page-active').attr('data-url') + "/" + rowdata['_id']
			openPopupWindow(url)
		}},	
	]
	
	$(".jqxGrid").jqxGrid( gridSettings );	
	jqxIntialize()
	$.mobile.loading('hide');					

});






