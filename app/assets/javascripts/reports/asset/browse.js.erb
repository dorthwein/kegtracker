		$.ajax({
			url: system.server + $('.ui-page-active').attr('data-url') + '/life_cycle_select',
			type: "POST",
			data: {record: item.value},
			success: function( data ){ 				
				$.mobile.loading('hide');			
				$('#asset_transactions').html(data.html);
