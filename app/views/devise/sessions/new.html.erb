<div style="text-align:center; margin:auto; width:175px;">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div style="text-align:left">
			<h4 style="margin:20px 0 0 0;">
				<%= f.label :email, 'E-mail:', 'data-role' => :none %><br />
			</h4>
			<%= f.email_field :email, 'data-role' => :none, 'class' => 'jqxInput required' %>
		</div>

		<div style="text-align:left">
			<h4 style="margin:20px 0 0 0;">
				<%= f.label :password, 'Password:', 'data-role' => :none %><br />
			</h4>				
			<%= f.password_field :password, 'data-role' => :none, 'class' => 'jqxInput required' %>
		</div>

		<% if devise_mapping.rememberable? -%>
		<div style="text-align:left">
			<h4 style="margin:10px 0 0 0;">
				<%= f.check_box :remember_me, 'data-role' => :none, 'class' => 'jqxCheckBox' %> 
				<%= f.label :remember_me, 'data-role' => :none %>
			</h4>
		</div>
		<% end -%>

		<div style="text-align:left">
			<%= f.submit "Sign in", 'data-role' => :none, 'class' => 'jqxButton' %>
		</div>
	<% end %>
		<div style="text-align:left; display:none">		
			<%= render :partial => "devise/shared/links" %>
		</div>
</div>