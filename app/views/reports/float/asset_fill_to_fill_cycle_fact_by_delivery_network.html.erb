
    <div id="simple_container">
        <div id="grid_title" class="simple">
            <h2>
                <%= current_user.entity.description %> Asset Cycles 
            </h2>
            <h5 style="text-align:center;"> 
                    By Distribution Channel <br />
                    90 Day (Rolling)
            </h5>

            <h5>
                <span class="simple left hidden"> 
                    Network: <br />                    
                    <span id="displayNetwork"> </span>
                </span>
                
                <span class="simple left"> 
                    Date: <br />
                    <span id="displayDate"> </span>
                </span>
            </h3>            
        </div>

        <div class="simple toolbar">
            <%= link_to 'Advanced View', :reports_float_activity_summary_report_advanced, :id => :advancedView, :class => 'simple input right hidden' %>

            <%= link_to 'Simple View', :reports_float_activity_summary_report_simple, :id => :simpleView, :class => 'simple input right hidden' %>
            <div id='date' class="simple input left">
            </div>

            <div id='delivery_network_id' class="simple input left">
            </div>

            <input type="button" class="simple input left" value="Find Records" id='findRecord' data-role="none"/>

            <input type="button" class="simple input left" value="Export to Excel" id='excelExport' data-role="none"/>


        </div>

        <div id="jqxgrid" class="simple">
        </div>
    </div>

