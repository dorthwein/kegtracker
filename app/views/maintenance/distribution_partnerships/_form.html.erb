<%= form_for([:maintenance, @record], :remote => true) do %>
<div>
	<%= submit_tag("Save", :class => "save left") %>
	<%= button_tag "Cancel",:type => 'button',:class => "cancel left" %>
</div>
<table class="popup jqxValidator">
	<tbody>
		<tr>
			<th colspan="4"> <h3> Details </h3> </th>			
		</tr>

		<tr>
			<td>	<b> Brewery </b>	</td>
			<td>	
				<%= select(:distribution_partnership, :entity_id, @entities.map{|x| [x.description, x._id]}, :class => 'required') %>		
			</td>
			<td>	<b> Distributor </b>	 	</td>
			<td>				
				<%= select(:distribution_partnership, :partner_id, @partners.map{|x| [x.description, x._id]}, :class => 'required') %>		
			</td>		
		</tr>
		<tr>
			<td>	<b> Max # of days allowed  </b>	</td>
			<td>	
				<%= number_field(:distribution_partnership, :overdue_time, :class => 'required') %>			
			</td>
		</tr>
	</tbody>
</table>	
<% end %>