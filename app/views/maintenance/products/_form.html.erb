<div style="overflow: hidden;">
	<%= form_for([:maintenance, @product] ) do |f|  %>
		<table>
			<tr>
				<td>
					<%= f.label(:entity_id, 'Entity:') %>
				</td>
				<td>
					<%= f.select(:entity_id, options_for_select(@entities, (@product.entity.nil? ? @entities.first : @product.entity.id)), 'style' => 'width:100px')  %>	 									
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label(:description, 'Product:') %>					
				</td>
				<td>
					<%= f.text_field :description, 'data-role' => :none %>	 
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label(:product_type_id, 'Varietal:') %>					
				</td>
				<td>
					<%= f.select(:product_type_id, options_for_select(@product_types_array, (@product.product_type.nil? ? @product_types_array.first : @product.product_type.id)), 'style' => 'width:100px')  %>	 
				</td>
			</tr>
			<tr>
				<td align="right"><%= f.label(:externalID, 'Brewer ID:') %> </td>
				<td align="left"> <%= f.text_field :externalID %> </td>
			</tr>			

			<tr>
				<td align="right"><%= f.label(:upc, 'UPC:') %> </td>
				<td align="left"> <%= f.text_field :upc %> </td>
			</tr>			
			<tr>
				<td align="right"></td>
				<td style="padding-top: 10px;" align="right">
					<input style="margin-right: 5px;" type="button" data-role="none" id="Save" value="Save" />
					<input id="Cancel" type="button" value="Cancel" data-role="none" />
				</td>
			</tr>
			
		</table>
	<% end %>		
</div>



