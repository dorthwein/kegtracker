<%= form_for([:maintenance, @record], :remote => true) do %>
<div>
	<%= submit_tag("Save", :class => "save left") %>
	<%= button_tag "Cancel",:type => 'button',:class => "cancel left" %>
</div>
<table class="popup jqxValidator">
	<tbody>
		<tr>
			<th colspan="4"> <h3> Details </h3> </th>			
		</tr>
		<tr>
			<td>	<b> Description </b>	</td>
			<td>	
				<%= text_field(:network, :description, :class => 'required') %>			
			</td>
			<td>	</td>
			<td>	</td>
		</tr>
		<tr>
			<td>	<b> Entity </b>	 	</td>
			<td>
				<%= select(:network, :entity_id, @entities.map{|x| [x.description, x._id]}, :class => 'required') %>		
		
			</td>		
			<td>	<b> Network Type </b>	 	</td>
			<td>
				<%= select(:network, :network_type, @network_types.map{|x| [x[:description], x[:_id]]}, :class => 'required') %>		
			</td>		
		</tr>

		<tr>
			<td>	
				<b> In Bound Location </b>
			</td>
			<td>
				<%= select(:network, :smart_mode_in_location_id, @locations.map{|x| [x.description, x._id]}, :class => 'required') %>		

				<div id="smart_mode_in_location_id" class="jqxDropDownList "> 

			</td>			
			<td>	
				<b> Out Bound Location </b>
			</td>
			<td>
				<%= select(:network, :smart_mode_out_location_id, @locations.map{|x| [x.description, x._id]}, :class => 'required') %>		
			</td>
		</tr>
		<tr>
			<td>
				<b> Product </b>
			</td>
			<td>
				<%= select(:network, :smart_mode_product_id, @products.map{|x| [x.description, x._id]}, :class => 'required') %>		
			</td>
			<td>
                <b> Auto Mode </b>
            </td>
            <td>
				<%= select(:network, :auto_mode, [['On', 1], ['Off', 0]], :class => 'required') %>		
            </td>
        </tr>
	</tbody>
</table>	
<% end %>