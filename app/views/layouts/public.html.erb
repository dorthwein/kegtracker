<!DOCTYPE html>
<html>
<head>
  <title>BreweryApps</title>
  <%= stylesheet_link_tag "public_manifest"  %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-40327307-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>	

    <meta name="viewport" content="width=960, user-scalable=yes" />
</head>
<body class="public" data-role="none"> 
	<div id="<%= params[:controller].to_s.gsub('/', '_') %>" class="public_container">		
		<div id="header" class="public">	
			<%= link_to 'Log in', new_user_session_path %> 
		</div>
		<div id="content" class="public">		
			<h1>	

			</h1>

			<table style="width:100%; margin-top:20px">
				<tbody>
					<tr>						
						<td width="20%">	
							<%= link_to image_tag("public_home_icon.png"), :public_home %> 
							<h5> Home	</h5>
						</td>
						<td width="20%">								
							<%= link_to image_tag("abouticon.png"), new_user_session_path %>							
							<h5> FAQ	</h5>
						</td>

						<td width="20%">
							<%= link_to image_tag("kegtrackericon.png"), new_user_session_path %>
							<h5> KegTracker	</h5>
						</td>

						<td width="20%">	
							<%= link_to image_tag("playicon.png"), new_user_session_path %>
							<h5> Demo	</h5>
						</td>

						<td width="20%">	
							<%= link_to image_tag("join_icon.png"), :public_join_index %> 							
							<h5> Sign Up	</h5>
						</td>

					</tr>
				</tbody>
			</table>							
		<!-- Main Content -->	
			<%= yield %>												
		</div>

	</div>
	</body>
</html>
