<%= form_for([:maintenance, @record], :remote => true) do %>
<div>
	<%= submit_tag("Save", :class => "save left") %>
	<%= button_tag "Cancel",:type => 'button',:class => "cancel left" %>
</div>

<table class="popup jqxValidator">
	<tbody>
		<tr>
			<th colspan="4"> <h3> Details </h3> </th>			
		</tr>

		<tr>
			<td>	<b> Contractee </b>	 	</td>
			<td>					
				<%= select(:production_partnership, :entity_id, @entities.map{|x| [x.description, x._id]}, :class => 'required') %>								
			</td>		
			
			<td>	<b> Production Brewer </b>	</td>
			<td>	
				<%= select(:production_partnership, :partner_id, @partners.map{|x| [x.description, x._id]}, :class => 'required') %>
			</td>
		</tr>

	</tbody>
</table>	
<% end %>