<%= form_for([:maintenance, @record], :remote => true) do %>
<div>
	<%= submit_tag("Save", :class => "save left") %>
	<%= button_tag "Cancel",:type => 'button',:class => "cancel left" %>
</div>
<table class="popup">
	<tbody>
		<tr>
			<th colspan="4"> <h3> Details </h3> </th>			
		</tr>

		<tr>
			<td>	<b> Description </b>	</td>
			<td>	
				<%= text_field(:location, :description, :class => 'required') %>
			<td>
				<b>	Account # </b>
			</td>
			<td>
				<%= text_field(:location, :externalID) %>				
			</td>
		</tr>
		<tr>
			<td>
				<b> Network </b>
			</td>
			<td>
				<%= select(:location, :network_id, @networks.map{|x| [x.description, x._id]}, :class => 'required') %>		
			</td>
			<td>
            	<b> Location Type </b>
            </td>
            <td>
				<%= select(:location, :location_type, @location_types.map{|x| [x[:description], x[:_id]]}, :class => 'required') %>		
          	</td>	
		</tr>
		<tr> 
			<td> 
				<b> Scope </b>
			</td>
			<td>	
				<%= select(:location, :scope, [['Private', 0], ['Public', 1]], :class => 'required') %>
			</td>
		
			<td>	</td>
			<td>	</td>
		</tr>
		<tr>
			<th colspan="4"> <h3> Address </h3> </th>			
		</tr>

		<tr>
			<td>
				<b> Address Name </b>

			</td>
			<td>

				<%= text_field(:location, :name) %>				
			</td>
			<td>	
				<b> Street </b>

			</td>
			<td>
				<%= text_field(:location, :street) %>				
			</td>

		</tr>
		<tr>
			<td>
				<b> City </b>
			</td>
			<td>
				<%= text_field(:location, :city) %>				
			</td>
			<td>
				<b> State </b>
			</td>
			<td>
				<%= text_field(:location, :state) %>				
			</td>
		</tr>
		<tr>
			<td>	</td>
			<td>	</td>
			<td>
				<b> Zip </b>
			</td>
			<td>
				<%= text_field(:location, :zip) %>				
			</td>
		</tr>

	</tbody>
</table>	
<% end %>