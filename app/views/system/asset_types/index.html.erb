<li class="li-table">
	<%= toolbar({:new => true, :module_menu => true, :scanners_menu => true, :reports_menu => true, :browse_menu => true, :maintenance_menu => true}) %>		
	<table class="dt">
		<thead>
			<tr>
				<th>Description	</th>
				<th>Size		</th>
				<th>Unit			</th>
				<th>	</th>
			</tr>	
		<thead>		
		<tbody>
			<% @asset_types.each do |asset_type| %>

				<tr>
					<td> <%= asset_type.description %>	</td>
					<td> <%= asset_type.size %> <%= asset_type.measurement_unit.abbreviation %>	</td>
					<td> <%= asset_type.measurement_unit.description %>	</td>
					<td>
						<%= link_to 'Show', system_asset_type_path(asset_type) %>
						<%= link_to 'Edit', edit_system_asset_type_path(asset_type) %> 
						<%= link_to 'Destroy', system_asset_type_path(asset_type), confirm: 'Are you sure?', method: :delete %> 
					</td>
				</tr>
	<% end %>
		</tbody>
	</table>
</li>	
